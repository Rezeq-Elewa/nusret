<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray"
    tools:context="com.example.rezeq.nusret.fragments.OrderDetailsFragment">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/order"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        card_view:cardBackgroundColor="@color/colorWhite"
        card_view:cardCornerRadius="7dp"
        card_view:cardElevation="5dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.example.rezeq.nusret.views.CustomTextView
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="24dp"
                android:text="#321548"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.example.rezeq.nusret.views.CustomTextView
                android:id="@+id/orderValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="24dp"
                android:text="800"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/number" />

            <com.example.rezeq.nusret.views.CustomTextView
                android:id="@+id/customTextView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ريال   -  "
                app:layout_constraintEnd_toStartOf="@+id/orderValue"
                app:layout_constraintTop_toTopOf="@+id/orderValue" />

            <com.example.rezeq.nusret.views.CustomTextView
                android:id="@+id/itemCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="2"
                app:layout_constraintEnd_toStartOf="@+id/customTextView9"
                app:layout_constraintTop_toTopOf="@+id/orderValue" />

            <com.example.rezeq.nusret.views.CustomTextView
                android:id="@+id/customTextView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" منتج"
                app:layout_constraintEnd_toStartOf="@+id/itemCount"
                app:layout_constraintTop_toTopOf="@+id/orderValue" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/statusImage"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:scaleType="centerCrop"
                android:src="@color/colorRed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/number"
                app:riv_corner_radius="5dp" />

            <com.example.rezeq.nusret.views.CustomTextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="مغلق"
                android:textColor="@color/colorWhite"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="@+id/statusImage"
                app:layout_constraintEnd_toEndOf="@+id/statusImage"
                app:layout_constraintStart_toStartOf="@+id/statusImage"
                app:layout_constraintTop_toTopOf="@+id/statusImage" />

            <com.example.rezeq.nusret.views.CustomTextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="12/10/2017"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/orderValue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/orderValue" />

            <com.example.rezeq.nusret.views.CustomTextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="10:30"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/orderValue"
                app:layout_constraintStart_toEndOf="@+id/date"
                app:layout_constraintTop_toTopOf="@+id/orderValue" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/time"
                app:layout_constraintTop_toTopOf="@+id/time"
                card_view:srcCompat="@drawable/ic_access_time_black_24px" />

            <TableLayout
                android:id="@+id/table"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/orderValue">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/colorGray">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:paddingBottom="3dp"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:paddingTop="3dp">

                        <com.example.rezeq.nusret.views.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:gravity="center"
                            android:text="المبلغ" />

                        <com.example.rezeq.nusret.views.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:gravity="center"
                            android:text="الكمية" />

                        <com.example.rezeq.nusret.views.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="right"
                            android:text="اسم المنتج" />
                    </LinearLayout>

                </TableRow>

            </TableLayout>

            <com.example.rezeq.nusret.views.CustomTextView
                android:id="@+id/customTextView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp"
                android:text="المجموع"
                android:textColor="@color/colorRed"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/table"
                app:layout_constraintTop_toBottomOf="@+id/table" />

            <com.example.rezeq.nusret.views.CustomTextView
                android:id="@+id/customTextView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text=" ريال"
                android:textColor="@color/colorRed"
                app:layout_constraintBottom_toBottomOf="@+id/customTextView7"
                app:layout_constraintStart_toStartOf="@+id/table"
                app:layout_constraintTop_toTopOf="@+id/customTextView7" />

            <com.example.rezeq.nusret.views.CustomTextView
                android:id="@+id/totalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="800"
                android:textColor="@color/colorRed"
                app:layout_constraintBottom_toBottomOf="@+id/customTextView7"
                app:layout_constraintStart_toEndOf="@+id/customTextView8"
                app:layout_constraintTop_toTopOf="@+id/customTextView7" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</ScrollView>
